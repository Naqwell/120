#include<iostream>
использование пространства имен std;
интервал основной()
  {
    интервал а = 1500000000;
    а = (а * 10)/10; // 1 - неверный результат
    cout << "a = " << a << endl;
    интервал б = 1500000000;
    б = (static_cast<double>(b) * 10)/10; // 2 - верный результат
    cout << "b= " << b << endl;
    вернуть 0;
  }
