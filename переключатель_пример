#include <iostream>
использование пространства имен std;
интервал основной()
{
  интервал х;
  цин >> х;
  переключатель (х)
  {
     случай 1: cout << "понедельник" ; перерыв;
     случай 2: cout << "вторник"; перерыв;
     случай 3: cout << "среда"; перерыв;
     случай 4: cout << "четверг"; перерыв;
     случай 5: cout << "пятница"; перерыв;
     случай 6: cout << "суббота"; перерыв;
     случай 7: cout << "воскресенье"; перерыв;
     по умолчанию: cout << "вы ошиблись";
  }
  возврат 0;
}
